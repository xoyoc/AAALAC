@import "normalize.styl"
@import "icon.styl"
@import "skeleton.styl"

body
	background-image url("../img/fondo.jpg")
	font-size 16px
main 
	background-image url("../img/background.jpg")
.fondo
	background-repeat no-repeat
	background-size cover
	background-position center
.fondo2
	display block
	width 100%
	height 100%
.fondo_trasparente
	background-color rgba(black,.5)
/* <========== Seccionde encabezado ==========> */
.encabezado
	background white
	text-align center
	width 95%
	margin auto
	.encabezado__menu
		background rgba(3, 43, 104, 1)
		height 4em
		.encabezado__menu__lista
			display flex
			justify-content space-between
			align-items center
			list-style none
			height 100%
			width 95%
			.menu__lista--items
				display block
				text-decoration none
				color white
			.menu__lista--items:hover
				background-color rgba(255,255,255,.3)
				color red
/* <========== Seccionde contedido ==========> */
.contendido
	width 95%
	margin auto
	min-height 600px
	padding 1em 0
	.contendido__parrafo
		color white
.contenedor
	background-color white
	border solid navy
	bottom .5rem
	right .5rem
.contenedor--login
	background-color navy
	text-align center
	font-size 1.5rem
	.contenedor--login a 
		color white
		text-decoration none
.contenedor__lista
	list-style none
/* <========== Seccionde pie de pagina ==========> */
.pie-pagina
	background: -webkit-linear-gradient(left, rgba(0, 0, 255, 0.8) 10%, rgba(255, 255, 255, 0.2) 100%)
	width 95%
	margin auto
	padding .4rem 0
	display flex
	justify-content space-around
	align-items center
	.pie-pagina__domicilio
		color white
		width 20%
		text-align center
	.pie-pagina__enlaces--link
		color black
		text-decoration none
.icono 
	font-size 2.5em